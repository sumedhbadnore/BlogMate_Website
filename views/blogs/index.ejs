<html lang="en">
<%- include('../partials/head.ejs') %>
<body>

   <%- include('../partials/nav.ejs') %>
    <div class="wrapper">
        <div class="news">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>

                    <a href="/blogs/<%= blog._id %>" class="news__card">
                    <img src="<%= blog.url%>" alt="Blog Image" >
                    <h3 class="blog_title"> <%= blog.title %> </h3>
                    <p class="blog_snippet"> <%= blog.snippet %> </p>
                    </a>  

                <% }) %>
            <% } else { %>
                <p>There are no blogs here.</p>
            <% } %>
        </div>
    </div>

    <!-- <%- include('../partials/footer.ejs') %> -->
</body>
</html>